<?xml version="1.0" encoding="UTF-8"?>

<form>
    <fieldset>
        <field name="id" type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
                description="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
                readonly="true" />
        
        <field name="telefone" type="text"
                label="COM_AUDITORIA_FIELD_TELEFONE_LABEL"
                description="COM_AUDITORIA_FIELD_TELEFONE_DESC"
                class="inputbox"
                size="30"
        />
        
        <field name="hospital" type="hospital" label="COM_AUDITORIA_FIELD_HOSPITAL_LABEL"
                description="COM_AUDITORIA_FIELD_HOSPITAL_DESC" class="inputbox"
                required="true" />
        
        <field name="turno" type="turno" label="COM_AUDITORIA_FIELD_TURNO_LABEL"
                description="COM_AUDITORIA_FIELD_TURNO_DESC" class="inputbox"
                required="true" />
        
        <field name="intercorrencia" type="editor" class="inputbox"
                label="COM_AUDITORIA_FIELD_INTERCORRENCIA_LABEL" description="COM_AUDITORIA_FIELD_INTERCORRENCIA_DESC"
                filter="JComponentHelper::filterText"
                buttons="true" 
                hide="readmore,pagebreak" />
        
        <field name="created" type="calendar" label="COM_AUDITORIA_FIELD_CREATED_LABEL"
                description="COM_AUDITORIA_FIELD_CREATED_DESC" class="inputbox" size="22"
                format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
        
        <field name="created_by" type="user"
                label="COM_AUDITORIA_FIELD_CREATED_BY_LABEL" description="COM_AUDITORIA_FIELD_CREATED_BY_DESC" />
        
        <field name="modified" type="calendar" class="readonly"
		label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_AUDITORIA_FIELD_MODIFIED_DESC"
		size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
        
        <field name="modified_by" type="user"
		label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
		class="readonly"
		readonly="true"
		filter="unset"
        />
        
    </fieldset>
</form>
