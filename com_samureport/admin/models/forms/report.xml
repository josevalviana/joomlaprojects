<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details" addfieldpath="/administrator/components/com_hospitals/models/fields">
	
		<field name="id"  type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true"  />

		<field name="hospitalid" type="hospital"
			label="COM_SAMUREPORT_FIELD_HOSPITALID_LABEL" description="COM_SAMUREPORT_FIELD_HOSPITALID_DESC"
			class="inputbox" required="true"
		/>
		
		<field name="shiftid" type="shift"
			label="COM_SAMUREPORT_FIELD_SHIFTID_LABEL" description="COM_SAMUREPORT_FIELD_SHIFTID_DESC"
			class="inputbox" required="true"
		/>
		
		<field name="created" type="calendar" label="COM_SAMUREPORT_FIELD_CREATED_LABEL"
			description="COM_SAMUREPORT_FIELD_CREATED_DESC" class="inputbox" size="22"
			format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="created_by" type="user"
			label="COM_SAMUREPORT_FIELD_CREATED_BY_LABEL" description="COM_SAMUREPORT_FIELD_CREATED_BY_DESC" />

		<field name="modified" type="calendar" class="readonly"
			label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_SAMUREPORT_FIELD_MODIFIED_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="modified_by" type="user"
		label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
		class="readonly"
		readonly="true"
		filter="unset"
		 />

	</fieldset>
</form>
