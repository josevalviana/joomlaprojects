<?xml version="1.0" encoding="UTF-8"?>
<form
    addrulepath="/administrator/components/com_filauti/models/rules">
	<fieldset name="details" addfieldpath="/administrator/components/com_filauti/models/fields">
		<field name="id" type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true" />
		
		<field name="nome" type="text" label="COM_FILAUTI_NOME_LABEL"
			description="COM_FILAUTI_NOME_DESC" class="inputbox" size="30"
			required="true" />
                        
                <field name="solicitante" type="text" label="COM_FILAUTI_SOLICITANTE_LABEL"
                        description="COM_FILAUTI_SOLICITANTE_DESC" class="inputbox" size="30"
                        required="true" />
                        
                <field name="crm" type="text" label="COM_FILAUTI_CRM_LABEL"
                        description="COM_FILAUTI_CRM_DESC" class="inputbox" size="30"
                        required="true" />
			
		<field name="sisreg" type="text" label="COM_FILAUTI_SISREG_LABEL"
		    description="COM_FILAUTI_SISREG_DESC" class="inputbox validate-integeronly" size="10"
		    required="true" validate="integeronly" />
		    
		<field name="munid" type="municipio" label="COM_FILAUTI_MUNICIPIO_LABEL"
			description="COM_FILAUTI_MUNICIPIO_DESC" class="inputbox" 
			required="true" />
		
		<field name="hospfromid" type="hospital" label="COM_FILAUTI_HOSPFROMID_LABEL"
		    description="COM_FILAUTI_HOSPFROMID_DESC" class="inputbox"
		    required="true" />
		    
		<field name="hosptoid" type="hospital" label="COM_FILAUTI_HOSPTOID_LABEL"
		    description="COM_FILAUTI_HOSPTOID_DESC" class="inputbox"
		    required="true" />
		    
		<field name="idade" type="text" label="COM_FILAUTI_IDADE_LABEL"
			description="COM_FILAUTI_IDADE_DESC" class="inputbox validate-integeronly" size="10"
			required="true" validate="integeronly" />
		
		<field name="idade_c" type="list" class="inputbox" size="1" default="0" required="true">
			<option value="0">COM_FILAUTI_YEARS</option>
			<option value="1">COM_FILAUTI_MONTHS</option>
			<option value="2">COM_FILAUTI_DAYS</option>
		</field>
                
                <field name="sexo" type="list" label="COM_FILAUTI_SEXO_LABEL"
                       description="COM_FILAUTI_SEXO_DESC" class="inputbox" size="1" default="1" 
                       required="true">
                    <option value="1">COM_FILAUTI_GENDER_M</option>
                    <option value="2">COM_FILAUTI_GENDER_F</option>
                </field>
		
		<field name="cid" type="text" class="inputbox"
			description="COM_FILAUTI_CID_DESC" label="COM_FILAUTI_CID_LABEL" size="30"
			required="true" />
		
		<field name="promotoria" type="list" label="COM_FILAUTI_PROMOTORIA_LABEL"
		       description="COM_FILAUTI_PROMOTORIA_DESC" class="inputbox" size="1" default="0" required="true">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
                
                <field name="prioridade" type="list" class="inputbox" size="1" default="0" readonly="true"
                       label="COM_FILAUTI_FIELD_PRIORIDADE_LABEL" description="COM_FILAUTI_FIELD_PRIORIDADE_DESC">
                        <option value="0">COM_FILAUTI_NO_PRIORITY</option>
                        <option value="1">COM_FILAUTI_PRIORITY_1</option>
                        <option value="2">COM_FILAUTI_PRIORITY_2</option>
                        <option value="3">COM_FILAUTI_PRIORITY_3</option>
                        <option value="4">COM_FILAUTI_PRIORITY_4</option>
                </field>
		
		<field name="encerrado" type="list" label="COM_FILAUTI_ENCERRADO_LABEL"
			   description="COM_FILAUTI_ENCERRADO_DESC" class="inputbox" size="1" default="0" required="true">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
                
                <field name="motencerra" type="list" label="COM_FILAUTI_MOTENCERRA_LABEL"
                       description="COM_FILAUTI_MOTENCERRA_DESC" class="inputbox" size="1" default="0" required="true">
                       <option value="0">COM_FILAUTI_NOT_INFORMED</option>
                       <option value="1">COM_FILAUTI_BETTER</option>
                       <option value="2">COM_FILAUTI_TRANSFERED</option>
                       <option value="3">COM_FILAUTI_DECEASED</option>
                       <option value="4">COM_FILAUTI_GAVEUP</option>
                </field>
		
		<field name="encerramento" type="calendar"
			label="COM_FILAUTI_ENCERRAMENTO_LABEL" description="COM_FILAUTI_ENCERRAMENTO_DESC"
			class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" />
		    
	</fieldset>
</form>