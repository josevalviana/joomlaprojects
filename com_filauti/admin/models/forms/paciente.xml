<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="details" addfieldpath="/administrator/components/com_filauti/models/fields">
		<field name="id" type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true" />
		
		<field name="nome" type="text" label="COM_FILAUTI_NOME_LABEL"
			description="COM_FILAUTI_NOME_DESC" class="inputbox" size="30"
			required="true" />
			
		<field name="sisreg" type="text" label="COM_FILAUTI_SISREG_LABEL"
		    description="COM_FILAUTI_SISREG_DESC" class="inputbox" size="10"
		    required="true" />
		    
		<field name="cartao" type="text" label="COM_FILAUTI_CARTAO_LABEL"
			description="COM_FILAUTI_CARTAO_DESC" class="inputbox" size="15"
			required="false" />
		    
		<field name="munid" type="municipio" label="COM_FILAUTI_MUNICIPIO_LABEL"
			description="COM_FILAUTI_MUNICIPIO_DESC" class="inputbox" 
			required="true" />
		
		<field name="hospfromid" type="hospital" label="COM_FILAUTI_HOSPFROMID_LABEL"
		    description="COM_FILAUTI_HOSPFROMID_DESC" class="inputbox"
		    required="true" />
		    
		<field name="hosptoid" type="hospital" label="COM_FILAUTI_HOSPTOID_LABEL"
		    description="COM_FILAUTI_HOSPTOID_DESC" class="inputbox"
		    required="true" />
		    
		<field name="idade" type="text" label="COM_FILAUTI_IDADE_LABEL"
			description="COM_FILAUTI_IDADE_DESC" class="inputbox" size="10"
			required="true" />
		
		<field name="idade_c" type="list" class="inputbox" size="1" default="0" required="true">
			<option value="0">COM_FILAUTI_YEARS</option>
			<option value="1">COM_FILAUTI_MONTHS</option>
			<option value="2">COM_FILAUTI_DAYS</option>
		</field>
		
		<field name="cid" type="text" class="inputbox"
			description="COM_FILAUTI_CID_DESC" label="COM_FILAUTI_CID_LABEL" size="10"
			required="true" />
		
		<field name="promotoria" type="list" label="COM_FILAUTI_PROMOTORIA_LABEL"
		       description="COM_FILAUTI_PROMOTORIA_DESC" class="inputbox" size="1" default="0" required="true">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field name="encerrado" type="list" label="COM_FILAUTI_ENCERRADO_LABEL"
			   description="COM_FILAUTI_ENCERRADO_DESC" class="inputbox" size="1" default="0" required="true">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field name="encerramento" type="calendar"
			label="COM_FILAUTI_ENCERRAMENTO_LABEL" description="COM_FILAUTI_ENCERRAMENTO_DESC"
			class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" />
			
		<field name="obito" type="list" label="COM_FILAUTI_OBITO_LABEL"
			   description="COM_FILAUTI_OBITO_DESC" class="inputbox" size="1" default="0" required="true">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
			<option value="9">COM_FILAUTI_IGNORED</option>
		</field>
		
		<field name="dtobito" type="calendar"
			label="COM_FILAUTI_DTOBITO_LABEL" description="COM_FILAUTI_DTOBITO_DESC"
			class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" />
		    
	</fieldset>
</form>